{
  "name": "modoco-backend",
  "version": "0.0.1",
  "description": "WebRTC signaling server using websocket",
  "author": "Juhyeong Ko",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "ci": "rm -rf node_modules && yarn install --frozen-lockfile",
    "prebuild": "rimraf dist",
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "prisma:dev:deploy": "prisma migrate deploy",
    "docker:redis": "docker compose -f dockers/redis/docker-compose.yml up -d",
    "docker:postgres": "docker-compose -f dockers/postgres/docker-compose.yml up -d",
    "docker:kill": "docker compose -f dockers/redis/docker-compose.yml kill; docker compose -f dockers/postgres/docker-compose.yml kill;",
    "docker:rm": "docker compose -f dockers/redis/docker-compose.yml rm -s -f -v; docker compose -f dockers/postgres/docker-compose.yml rm -s -f -v",
    "docker:restart": "yarn docker:rm && yarn docker:redis && yarn docker:postgres && sleep 2 && yarn prisma:dev:deploy",
    "docker": "yarn docker:redis && yarn docker:postgres",
    "start": "yarn docker && nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "deploy": "yarn ci && yarn build && yarn start:prod",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json"
  },
  "dependencies": {
    "@nestjs/common": "^8.0.0",
    "@nestjs/config": "^2.1.0",
    "@nestjs/core": "^8.0.0",
    "@nestjs/platform-express": "^8.0.0",
    "@nestjs/platform-socket.io": "^8.4.7",
    "@nestjs/websockets": "^8.4.7",
    "@prisma/client": "4.0.0",
    "@socket.io/redis-adapter": "^7.2.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.13.2",
    "cross-env": "^7.0.3",
    "helmet": "^5.1.0",
    "joi": "^17.6.0",
    "newrelic": "^8.15.0",
    "redis": "^4.1.0",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "rxjs": "^7.2.0",
    "webpack": "^5.0.0"
  },
  "devDependencies": {
    "@nestjs/cli": "^8.0.0",
    "@nestjs/schematics": "^8.0.0",
    "@nestjs/testing": "^8.0.0",
    "@types/express": "^4.17.13",
    "@types/jest": "27.5.0",
    "@types/newrelic": "^7.0.3",
    "@types/node": "^18.0.3",
    "@types/supertest": "^2.0.11",
    "@types/ws": "^8.5.3",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "eslint": "^8.0.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "jest": "28.0.3",
    "prettier": "^2.3.2",
    "prisma": "^4.0.0",
    "source-map-support": "^0.5.20",
    "supertest": "^6.1.3",
    "ts-jest": "28.0.1",
    "ts-loader": "^9.2.3",
    "ts-node": "^10.0.0",
    "tsconfig-paths": "4.0.0",
    "typescript": "^4.3.5"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
