// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  uid       String   @id
  nickname  String
  avatar    String
  createdAt DateTime @default(now())
  Room      Room[]
}

model Room {
  itemId      Int      @id @default(autoincrement())
  moderator   User     @relation(fields: [moderatorId], references: [uid])
  moderatorId String
  title       String
  details     String?
  tags        String[]
  current     Int
  total       Int
  createdAt   DateTime @default(now())
}
